import cv2
from matplotlib import pyplot as plt

# Read image
img = cv2.imread('image5.jpg')  # Replace with your image path
img = cv2.cvtColor(img, cv2.COLOR_BGR2RGB)  # Convert BGR to RGB for matplotlib

# Scale up (Bigger)
img_bigger = cv2.resize(img, None, fx=1.5, fy=1.5, interpolation=cv2.INTER_LINEAR)

# Scale down (Smaller)
img_smaller = cv2.resize(img, None, fx=0.5, fy=0.5, interpolation=cv2.INTER_AREA)

# Display
plt.figure(figsize=(12,4))
plt.subplot(1,3,1), plt.imshow(img), plt.title('Original')
plt.subplot(1,3,2), plt.imshow(img_bigger), plt.title('Bigger')
plt.subplot(1,3,3), plt.imshow(img_smaller), plt.title('Smaller')
plt.show()
