import cv2, matplotlib.pyplot as plt

img = cv2.imread("image.jpg")
x,y,w,h = 100,50,200,150
cv2.rectangle(img,(x,y),(x+w,y+h),(0,255,0),2)
roi = img[y:y+h, x:x+w]

plt.subplot(1,2,1)
plt.imshow(cv2.cvtColor(img, cv2.COLOR_BGR2RGB)); plt.axis("off"); plt.title("Image with Rectangle")
plt.subplot(1,2,2)
plt.imshow(cv2.cvtColor(roi, cv2.COLOR_BGR2RGB)); plt.axis("off"); plt.title("Extracted Object")
plt.show()
